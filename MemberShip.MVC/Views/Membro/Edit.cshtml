            <div class="col-md-offset-1 col-md-1">
                <input type="submit" value="Salvar" class="btn btn-primary" />               
            </div>
            <div class="col-md-offset-0 col-md-1">
                @Html.ActionLink("Votar","Index","Membro", new {@class ="btn btn-default"})
            </div>
